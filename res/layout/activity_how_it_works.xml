<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.bitcoin.authenticator.How_it_works"
    tools:ignore="MergeRootFrame" >
    
    <Button
        android:id="@+id/btnBeginSetup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/button_begin_setup"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/authenticator" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnBeginSetup"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="25dp"
        android:text="With 2-Factor Authentication, whenever you send bitcoins you will need to:"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_below="@+id/textView4"
         android:layout_alignLeft="@+id/btnBeginSetup"
         android:layout_marginTop="25dp"
         android:src="@drawable/numberone" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_below="@+id/imageView2"
         android:layout_alignLeft="@+id/btnBeginSetup"
         android:layout_marginTop="25dp"
         android:src="@drawable/numbertwo" />

     <TextView
         android:id="@+id/textView5"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/imageView2"
         android:layout_marginLeft="24dp"
         android:layout_toRightOf="@+id/imageView2"
         android:text="Create a transaction with your wallet like normal"
         android:textColor="#FFFFFF"
         android:textSize="16sp" />

     <TextView
         android:id="@+id/textView6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/textView5"
         android:layout_alignTop="@+id/imageView3"
         android:text="Authorize the transaction using Bitcoin Authenticator"
         android:textColor="#FFFFFF"
         android:textSize="16sp" />

 </RelativeLayout>


