<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.bitcoin.authenticator.Pair_wallet"
    tools:ignore="MergeRootFrame" >
    

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="30dp"
        android:text="STATUS GOES HERE"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvStatus"
        android:layout_alignLeft="@+id/tvStatus"
        android:layout_marginBottom="22dp"
        android:layout_weight="0.79"
        android:text="QR SCAN CONTENT GOES HERE"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <requestFocus />

    <Button
        android:id="@+id/btnScan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgNum3"
        android:layout_below="@+id/imgNum2"
		android:layout_marginTop="93dp"
		android:layout_marginLeft="15dp"
        android:text="Scan QR Code"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/txtLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgNum1"
        android:layout_below="@+id/imgNum1"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Wallet Name"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />
    
    <ImageView
        android:id="@+id/imgNum2"
        android:layout_width="50dp"
        android:layout_height="50dp"
 		android:layout_below="@+id/txtLabel"
 		android:layout_marginTop="28dp"
        android:src="@drawable/ic_numbertwo" />

    <ImageView
        android:id="@+id/imgNum1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_numberone" />
    
    <ImageView
        android:id="@+id/imgNum3"
        android:layout_width="50dp"
        android:layout_height="50dp"
		android:layout_below="@+id/imgNum2"
		android:layout_marginTop="97dp"
        android:src="@drawable/ic_numberthree" />
    
    <TextView
        android:id="@+id/lblClickPairWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgNum2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
		android:layout_below="@+id/txtLabel"
        android:text="Click 'Pair Wallet' in your wallet settings"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/lblLabelDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgNum1"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="Enter a name for this wallet"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

</RelativeLayout>