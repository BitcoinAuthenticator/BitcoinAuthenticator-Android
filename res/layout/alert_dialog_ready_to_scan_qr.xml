<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/Alert_Dialog_BG_Color">
    
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">       	  
        <TextView
	        android:id="@+id/dialog_ready_to_scan_qr_title"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:background="@color/transparent"
	        android:layout_marginLeft="5dip"
	        android:text="Ready To Scan QR"
	        android:textColor="@color/Alert_Dialog_Text_Color"
	        android:textSize="26dip"
	        android:textStyle="bold"
	        android:typeface="sans" />
        
	</LinearLayout>
	
    <TextView
        android:id="@+id/dialog_ready_to_scan_qr_secondary_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:layout_marginLeft="5dip"
        android:text=""
        android:textColor="@color/Alert_Dialog_Text_Color"
        android:textSize="18dip"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="15dp"
	        android:background="@color/transparent"/>
    
    <TextView
        android:id="@+id/dialog_ready_to_scan_qr_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginLeft="5dip"
        android:text=""
        android:textColor="@color/Alert_Dialog_Text_Color"
        android:textSize="14dip"
        android:textStyle="bold"
        android:typeface="sans" />
	
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="15dp"
	        android:background="@color/transparent"/>
    
     <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent"
				    android:gravity="center"> 
				    
         <ImageView android:id="@+id/dialog_ready_to_scan_qr_center_icon"
	        android:layout_width="100dp"
	        android:layout_height="100dp"
	        android:background="@color/transparent"/>	 
				    
     </LinearLayout>
    
    
	        
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="15dp"
	        android:background="@color/transparent"/>
	
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">
				    
        <TextView android:id="@+id/dialog_ready_to_scan_qr_ok_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="50"
	        android:background="@color/transparent"
	        android:textColor="@color/Alert_Dialog_Input_Alert_Green_Color"
	        android:gravity="center"
	        android:text="Ready"
	        android:textSize="26dip"
	        android:textStyle="bold"
	        android:typeface="sans"/>
        
        <TextView android:id="@+id/dialog_ready_to_scan_qr_cancel_button"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="50"
	        android:textColor="@color/Alert_Dialog_Text_Color"
	        android:background="@color/transparent"
	        android:gravity="center"
	        android:text="Cancel"
	        android:textSize="26dip"
	        android:textStyle="bold"
	        android:typeface="sans"/>
        
	</LinearLayout>
    
</LinearLayout>
