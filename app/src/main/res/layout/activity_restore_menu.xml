<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.bitcoin.authenticator.Restore_Menu" >

    <!-- Spacer -->

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="@color/transparent" />

    <Button
        android:id="@+id/restore_menu_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/restore_menu_btn_mnemonic"
        android:layout_alignRight="@+id/restore_menu_btn_mnemonic"
        android:layout_below="@+id/restore_menu_btn_mnemonic"
        android:layout_marginTop="18dp"
        android:drawableTop="@drawable/ic_restore_from_file"
        android:scaleType="fitCenter"
        android:text="Restore from file"
        android:textColor="#e3e3e3" />

    <Button
        android:id="@+id/restore_menu_btn_mnemonic"
        android:layout_width="238dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/ic_btnmnemonic"
        android:padding="10dp"
        android:textColor="#e3e3e3"
        android:text="Restore from mnemonic passphrase" />

</RelativeLayout>