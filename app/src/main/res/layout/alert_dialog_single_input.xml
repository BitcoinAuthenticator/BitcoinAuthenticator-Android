<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/Alert_Dialog_BG_Color">
    
    <TextView
        android:id="@+id/dialog_single_input_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:layout_marginLeft="5dip"
        android:text=""
        android:textColor="@color/Alert_Dialog_Text_Color"
        android:textSize="24dip"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <TextView
        android:id="@+id/dialog_single_input_secondary_title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/transparent"
        android:layout_marginLeft="5dip"
        android:text=""
        android:textColor="@color/Alert_Dialog_Text_Color"
        android:textSize="18dip"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <EditText android:id="@+id/dialog_single_input_edit_text"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="@color/Alert_Dialog_Input_BG_Color"
	        android:textColor="@color/Alert_Dialog_Text_Color"
	        android:padding="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_marginTop="5dp"
	        android:textSize="18dip">
    
	</EditText>
	
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="15dp"
	        android:background="@color/transparent"/>
	
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">
				    
        <TextView android:id="@+id/dialog_single_input_ok_button"
	        android:layout_width="fill_parent"
	        android:layout_height="25dp"
	        android:layout_weight="50"
	        android:textColor="@color/Alert_Dialog_Text_Color"
	        android:background="@color/transparent"
	        android:gravity="center"
	        android:text="Ok"/>
        
        <TextView android:id="@+id/dialog_single_input_cancel_button"
	        android:layout_width="fill_parent"
	        android:layout_height="25dp"
	        android:layout_weight="50"
	        android:textColor="@color/Alert_Dialog_Text_Color"
	        android:background="@color/transparent"
	        android:gravity="center"
	        android:text="Cancel"/>
        
	</LinearLayout>
    
</LinearLayout>
