<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.bitcoin.authenticator.PairingDetails" >

    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent"
				    android:gravity="center"> 
				    
         <ImageView android:id="@+id/pairing_details_icon"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:src="@drawable/ic_bitcoin_logo"
	        android:background="@color/transparent"/>	 
				    
    </LinearLayout>
    
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="15dp"
	        android:background="@color/transparent"/>
    
    <!-- Name  -->
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">
				    
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ui_text_color"
	        android:textSize="20dip"
	        android:text="Pairing Name: " />
        
	    <TextView
	        android:id="@+id/pairing_details_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dip"
	        android:textColor="@color/ui_text_color"
	        android:text="XXX" />
	    
	</LinearLayout>
	
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="15dp"
	        android:background="@color/transparent"/>
    
    <!-- Account ID  -->
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">
				    
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ui_text_color"
	        android:textSize="20dip"
	        android:text="Account ID: " />
        
	    <TextView
	        android:id="@+id/pairing_details_account_id"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20dip"
	        android:textColor="@color/ui_text_color"
	        android:text="XXX" />
	    
	</LinearLayout>
	
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="30dp"
	        android:background="@color/transparent"/>
	
    <!-- Last known external IP  -->
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">
				    
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ui_text_color"
	        android:textSize="14dip"
	        android:text="Last know External IP: " />
        
	    <TextView
	        android:id="@+id/pairing_details_ext_ip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:textColor="@color/ui_text_color"
	        android:text="XXX" />
	    
	</LinearLayout>
	
    <!-- Spacer -->
    <View android:layout_width="fill_parent"
	        android:layout_height="10dp"
	        android:background="@color/transparent"/>
	
    <!-- Last known internal IP  -->
    <LinearLayout  android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:background="@color/transparent">
				    
        <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/ui_text_color"
	        android:textSize="14dip"
	        android:text="Last know Internal IP: " />
        
	    <TextView
	        android:id="@+id/pairing_details_int_ip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="14dip"
	        android:textColor="@color/ui_text_color"
	        android:text="XXX" />
	    
	</LinearLayout>
	
   

</LinearLayout>
